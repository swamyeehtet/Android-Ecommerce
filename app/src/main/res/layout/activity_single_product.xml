<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
    >
        <TextView
                android:id="@+id/tv_single_product_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/product_name"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/aclonica"/>
        <ImageView
                android:id="@+id/img_single_product"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/features"
        />
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:orientation="horizontal"
                      android:layout_marginTop="18dp"
        >
            <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Price"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:fontFamily="@font/aclonica"/>
            <TextView
                    android:id="@+id/tv_single_product_price"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="$900"
                    android:textSize="18sp"
                    android:fontFamily="@font/aclonica"/>
            <ImageView
                    android:id="@+id/addToCartImage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:src="@drawable/my_cart"
                    />


        </LinearLayout>
        <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Description"
                android:gravity="center_horizontal"
                android:fontFamily="@font/aclonica"/>
        <TextView
                android:id="@+id/tv_single_product_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="description"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/antic"/>

    </LinearLayout>
</ScrollView>
